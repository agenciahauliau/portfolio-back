{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@environments": ["src/environments"],
      "@shared": ["src/shared"],
      "@utils": ["src/utils"],
      "@validations": ["src/validations"]
    }
  }
}
